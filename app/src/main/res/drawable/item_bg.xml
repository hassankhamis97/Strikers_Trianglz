<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item android:right="0dp" android:left="0dp" android:bottom="-20dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="20dp"
                android:color="@android:color/transparent" />
        </shape>

    </item>
    <item android:top="0dp" android:left="100dp"  android:right="100dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="20dp"
                android:color="@color/pinkish_red" />
        </shape>
    </item>
    <item android:top="20dp">
        <shape android:shape="rectangle" >
            <solid android:color="#232323" />
        </shape>
    </item>

</layer-list>