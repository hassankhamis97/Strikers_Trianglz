<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="192dp"
    android:layout_height="266dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15.5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/gameCover_IV"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:scaleType="fitXY"
            android:src="@drawable/call_of_duty" />

        <androidx.cardview.widget.CardView
            android:id="@+id/gameType_cardView"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="11dp"
            android:layout_marginStart="14dp">

            <TextView
                android:id="@+id/gameType_textView"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center_horizontal"
                android:text="Playstation Game"
                android:paddingLeft="7.5dp"
                android:paddingTop="1.5dp"
                android:paddingRight="7.5dp"
                android:paddingBottom="1.5dp"
                android:textColor="@color/black"
                android:textSize="11.5sp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/gameName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameType_cardView"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="14dp"
            android:shadowColor="#66000000"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textSize="26.9sp"
            android:textColor="@color/white"
            android:lineSpacingExtra="7.7sp"
            android:text="Call of duty"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_below="@+id/gameCover_IV">

            <TextView
                android:id="@+id/followersNo_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:lineSpacingExtra="3.8sp"
                android:text="1,560 \n Followers"
                android:textColor="@color/white"
                android:textSize="11.5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/rounded_btn"
                android:text="@string/follow"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:backgroundTint="@color/pinkish_red"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintCircleRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>